<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ChristmasProject"
             x:Class="ChristmasProject.MainPage">

    <StackLayout BackgroundColor="LightCoral">

        <Label Text="Please enter your Username" TextColor="White"  HorizontalOptions="Center" x:Name="lblMessage" 
         VerticalOptions="Start" FontSize="Large"/>

        <Entry HorizontalOptions="Center" VerticalOptions="Center" x:Name="entryUsername" Placeholder="Enter Your Company ID here"/>
        <Entry HorizontalOptions="Center" IsPassword="True" VerticalOptions="Center" x:Name="entryPassword" 
               Placeholder="Enter Your Company Password here" />

        <Button Text="Log In" x:Name="btnChangeLabel" Clicked="btnChangeLabel_Clicked" BorderRadius="30" BorderWidth="2"  
                HorizontalOptions="Center" VerticalOptions="Start"/>

        <Button Text="Create new account" x:Name="NewAccount" Clicked="NewAccount_Clicked" BorderWidth="2"
                HorizontalOptions="Center" VerticalOptions="Start" BorderRadius="30" />

    </StackLayout>

</ContentPage>

