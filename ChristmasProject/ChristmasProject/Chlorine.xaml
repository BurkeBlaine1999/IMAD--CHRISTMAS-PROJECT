<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChristmasProject.Chlorine">
    <ContentPage.Content>
        <StackLayout BackgroundColor="DarkKhaki">
            <Label x:Name="lblMessage" Text="Please enter the Chlorine Level" TextColor="White"  HorizontalOptions="Center"  
                 VerticalOptions="Start" FontSize="Large"/>
            
            <Entry  Placeholder="Please enter Chlorine / DPD 1 level" x:Name="ClLevel"
                    HorizontalOptions="Center" VerticalOptions="Start"/>
            
            <Button Text="Enter"   x:Name="ChlorineEntered" Clicked="ChlorineEntered_Clicked"
                    HorizontalOptions="Center" VerticalOptions="Start" BorderRadius="15" BorderWidth="2"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
