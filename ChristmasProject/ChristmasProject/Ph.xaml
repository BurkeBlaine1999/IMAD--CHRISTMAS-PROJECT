<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ChristmasProject"
             x:Class="ChristmasProject.Ph">
    <ContentPage.Content>
        <StackLayout BackgroundColor="IndianRed">

            <Label x:Name="lblMessage" Text="Please enter the Ph Value" TextColor="White"  
                   HorizontalOptions="Center"  VerticalOptions="Start" FontSize="Large"/>
            
            <Entry  x:Name="PhLevels" Placeholder="Enter Ph Level"
                    HorizontalOptions="Center" VerticalOptions="Start"/>
            <Button x:Name="Ph_button" Text="Enter" Clicked="Ph_clicked"
                    HorizontalOptions="Center" VerticalOptions="Start" BorderRadius="15" BorderWidth="2"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
